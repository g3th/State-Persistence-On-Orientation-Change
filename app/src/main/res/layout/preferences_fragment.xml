<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="match_parent">

    <TextView
            style="@style/TextBox"
            android:layout_width="358dp"
            android:layout_height="73dp" android:id="@+id/display_info_box"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.49"
            app:layout_constraintVertical_bias="0.275"/>
    <TextView
            style="@style/TextBox"
            android:layout_width="358dp"
            android:layout_height="73dp" android:id="@+id/info_view"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.49"
            app:layout_constraintVertical_bias="0.164"/>
    <TextView
            style="@style/TextBox"
            android:layout_width="284dp"
            android:layout_height="65dp" android:id="@+id/what_do_pls"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.496"
            app:layout_constraintVertical_bias="0.418"/>
    <EditText
            android:layout_width="359dp"
            android:layout_height="77dp"
            android:inputType="text"
            android:ems="10"
            android:id="@+id/name_box"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_bias="0.551"/>
    <EditText
            android:layout_width="359dp"
            android:layout_height="77dp"
            android:inputType="phone"
            android:ems="10"
            android:id="@+id/phone_box"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_bias="0.551" android:visibility="invisible"/>
    <Button
            style="@style/Button"
            android:text="@string/back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/back_button"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.891" android:visibility="visible"/>
</androidx.constraintlayout.widget.ConstraintLayout>