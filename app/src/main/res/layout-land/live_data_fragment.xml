<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/numbers_fragment"
        android:tag="live_data"
        tools:context=".MainActivity">
    <Button
            style="@style/Button"
            android:text="@string/back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/back_button"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.891" android:visibility="visible"/>
    <TextView
            style="@style/TextBox"
            android:layout_width="344dp"
            android:layout_height="91dp" android:id="@+id/redrawn_text"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintVertical_bias="0.05"
            app:layout_constraintHorizontal_bias="0.498"/>
    <Button
            style="@style/Button"
            android:text="@string/generate"

            android:layout_width="224dp"
            android:layout_height="58dp" android:id="@+id/generate"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.711" app:layout_constraintHorizontal_bias="0.214"/>
    <Button
            style="@style/Button"
            android:text="@string/swap"
            android:backgroundTint="@color/lime"
            android:layout_width="224dp"
            android:layout_height="58dp" android:id="@+id/swap"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.711" app:layout_constraintHorizontal_bias="0.783"/>
    <TextView
            style="@style/TextBox"
            android:layout_width="512dp"
            android:layout_height="102dp" android:id="@+id/textView"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.497" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.404"/>
</androidx.constraintlayout.widget.ConstraintLayout>